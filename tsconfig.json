{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@stargate/common/models/*": [
        "packages/common/src/models/*"
      ],
      "@stargate/common/*": [
        "packages/common/src/*"
      ],
      "@stargate/common": [
        "packages/common/src"
      ],
      "@stargate/db/*": [
        "packages/db/src/*"
      ],
      "@stargate/db": [
        "packages/db/src"
      ],
      "@stargate/frontend/*": [
        "packages/frontend/src/*"
      ],
      "@stargate/frontend": [
        "packages/frontend/src"
      ]
    }
  }
}
